<?xml version="1.0"?>

<launch>
    <env name="GAZEBO_MODEL_PATH" value="$(find lidar)/models"/>

    <arg name="extra_gazebo_args" default="--verbose"/>

      <!-- Start Gazebo with wg world running in (max) realtime -->    
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find lidar)/worlds/baylands.world"/>
        <arg name="extra_gazebo_args" value="$(arg extra_gazebo_args)"/>
    </include>

    <group ns ="quadrotor">
        <param name="tf_prefix" value="drone_tf" />
    <!-- Spawn simulated quadrotor uav -->
        <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch" >
            <arg name="model" value="$(find hector_quadrotor_description)/urdf/quadrotor_hokuyo_utm30lx.gazebo.xacro"/>
            <arg name="x" default="0"/>
            <arg name="z" default="0.0"/>
        </include>
    </group>
    <node pkg="lidar" type="dronespiral.py" name="autohector" output="screen">
    </node>
</launch>
